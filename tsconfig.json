{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDirs": [
      "./src",
      "tests"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}